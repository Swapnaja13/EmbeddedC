/******************************************************************************
 Write program to take input as a password but should display only x's instead of characters

*******************************************************************************/

#include <stdio.h>
#include <conio.h>

int main()
{
    int i=0;
    char arr[10];
    
    do
    {
        arr[i]=getch();
        printf("*");
        i++;
    }while((arr[i]=getch())!='$');
}
