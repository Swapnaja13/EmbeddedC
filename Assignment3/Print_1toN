/******************************************************************************
              Write a program to print 1 to N using recursion 
*******************************************************************************/

#include <stdio.h>
#include <conio.h>

int fun(int N)
{
    static int n=1;
    printf("%d ",n);
    if(N==1)
    return 0;
    else
    {
        n++;
        return fun(N-1);
    }
}

int main()
{
    int N=10;
    fun(N);
}
